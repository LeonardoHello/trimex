{
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],

  "tailwindFunctions": ["cva", "cn"],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "",
    "^react$",
    "^(next|next/(.*))$",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^(@/|@payload-config)(.*)$",
    "^[.]"
  ],
  "singleQuote": false,
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true
}
